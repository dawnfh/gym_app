<!-- Business listing  -->

<div class="row business">
  <div class="col-xs-6 col-md-4">
    <div class="thumbnail" class-"stylepost">
       <div class="panel-heading hdrl">LOCATIONS</div>
        <% @gymplaces.each do |p| %>
        <strong>Place: &nbsp;</strong> <%= link_to p.place, gymplace_path(p) %>
        <strong>Location: &nbsp;</strong> <%= p.description %>
        <strong>Description: &nbsp;</strong> <%= p.location %>
        <strong>City: &nbsp;</strong><%= p.city %><br>
        <strong>Email: &nbsp;</strong><%= p.email %><br>
        <strong>Tel: &nbsp;</strong><%= p.telephone %><br>
        <strong>Posted: &nbsp;</strong><%= time_ago_in_words(p.created_at) %><br>
        <br><hr>
        <% end %>
        <%= will_paginate @gymplaces, renderer: BootstrapPagination::Rails, previous_label: "Newer", next_label: "Older", inner_window: 1, outer_window: 0 %> 
    </div>
   </div>



<!-- User's reviews  -->

  <div class="col-xs-6 col-md-4">
    <div class="thumbnail" class="userp">
       <div class="panel-heading hdrr">REVIEWS</div>
       <% @posts.each do |p| %>
       <%= image_tag p.user.avatar.url(:thumb) %>
        <strong>Place: &nbsp;</strong> <%= p.gymplace.place %> &nbsp; 
        <strong>Location: &nbsp;</strong> <%= p.gymplace.location %>
        <strong>City: &nbsp;</strong><%= p.gymplace.city %><br>
        <strong>Review: &nbsp;</strong><%= p.post %><br>
        <strong>Username: &nbsp;</strong><%= p.user.username %><br>

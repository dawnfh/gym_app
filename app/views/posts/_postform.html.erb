

<div id="review">
        <div class="form-group">

                <%= form_for @post do |f| %>


                <div class="control-group">
                        <%= f.label :place, class: "control-label" %>
                        <%= f.text_field :place, class: "form-control", placeholder: "Name of site" %>
                </div><br>

                <div class="control-group">   
                        <%= f.label :location, class: "control-label" %>
                        <%= f.text_field :location, class: "form-control", placeholder: "Location" %>                
                </div><br>

                <div class="control-group">  
                        <%= f.label :post, class: "control-label" %>
                        <%= f.text_area :post, class: "form-control", placeholder: "Tell us about it" %>
                </div><br>



                <div class="control-group">
                        <%=f.label :picture, class: "control-label" %>
                        <%= f.file_field :avatar, class: "form-control", placeholder: "Upload Photo" %>
                </div><br>

                        <div class="form-actions"> 
                        <%= f.submit  'Submit', class: "btn btn-primary" %>
                
                <% end %>
        </div>
</div>

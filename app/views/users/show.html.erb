
<body class="shbkgrd">
<div class="container">
	<div class="background">
  	<div class="transbox">
			<h1>Welcome <%= @user.username %></h1>
			<h2><span id="welcome">Your GymTalk Profile Page</span></h2>
		</div>
	</div>

	<div class="row">  
	  <div class="col-xs-6 col-md-6"> 
			<div class="userimage">	
			 <%= image_tag @user.avatar.url(:medium), :class => "userimg" %>
			</div><br>
			<div class="panel panel-default">
					<div class="user"><strong>Fname:&nbsp;&nbsp;</strong><%= @user.fname %><br></div>
					<div class="user"><strong>Username:&nbsp;&nbsp;</strong><%= @user.username %><br></div>
					<div class="user"><strong>Lname: &nbsp;&nbsp;</strong><%= @user.lname %><br></div>
					<div class="user"><strong>Email: &nbsp;&nbsp;</strong><%= @user.email %><br></div>
			</div>
		</div>
	</div><hr>
</div>



		<div class="col-sm-6 col-md-6">
			<h2>Edit Your Profile</h2>
			<%= render 'userform' %>
		</div>


	
	</div>
</div>
</div>
</body>
  
